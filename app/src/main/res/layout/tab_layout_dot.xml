<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorFFFFFF"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="13dp"
    android:layout_marginStart="4dp">

    <xlab.world.xlab.utils.view.textView.TextViewMediumNoto
        android:id="@+id/textViewTabName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="15sp"
        android:textColor="@color/colorBFBFBF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dotView"/>

    <View
        android:id="@+id/dotView"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:background="@color/color5300ED"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/textViewTabName"/>

</android.support.constraint.ConstraintLayout>