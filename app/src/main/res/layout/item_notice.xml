<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorFFFFFF">

    <LinearLayout
        android:id="@+id/noticeHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="19dp"
        android:paddingBottom="2dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewNoticeArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/notice_arrow"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp">

                <xlab.world.xlab.utils.view.textView.TextViewMediumNoto
                    android:id="@+id/textViewNoticeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/color000000"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>

                <xlab.world.xlab.utils.view.textView.TextViewRegularHan
                    android:id="@+id/textViewNoticeDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorA4A4A4"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/divideView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorE2E2E2"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/noticeContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <xlab.world.xlab.utils.view.textView.TextViewRegularNoto
            android:id="@+id/textViewNoticeContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/color000000"
            android:background="@color/colorF5F5F5"
            android:paddingTop="20dp"
            android:paddingBottom="32dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

    </LinearLayout>

</LinearLayout>
