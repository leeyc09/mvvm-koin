<?xml version="1.0" encoding="utf-8"?>
<xlab.world.xlab.utils.view.cardView.SquareCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="48dp"
    android:layout_height="match_parent"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:id="@+id/mainLayout">

    <ImageView
        android:id="@+id/imageViewColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"/>

    <xlab.world.xlab.utils.view.textView.TextViewBoldNoto
        android:id="@+id/textViewEtc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:background="@drawable/pet_hair_color_etc_box"
        android:text="@string/etc"
        android:textSize="13sp"
        android:textColor="@color/colorA4A4A4"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/imageViewSelected"
        android:src="@drawable/topic_color_select_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</xlab.world.xlab.utils.view.cardView.SquareCardView>
