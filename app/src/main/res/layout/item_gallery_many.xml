<?xml version="1.0" encoding="utf-8"?>
<xlab.world.xlab.utils.view.cardView.SquareCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/mainLayout">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"/>

    <ImageView
        android:id="@+id/overlayFilter"
        android:src="@color/colorWhite50"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/selectedFilter"
        android:src="@drawable/gallery_select_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="6dp">

        <ImageView
            android:id="@+id/imageViewSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gallery_select_number"/>

        <xlab.world.xlab.utils.view.textView.TextViewBoldNoto
            android:id="@+id/textViewNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorFFFFFF"
            android:textSize="12sp" />

    </FrameLayout>

</xlab.world.xlab.utils.view.cardView.SquareCardView>
