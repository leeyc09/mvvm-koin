<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFFFFFF"
    android:paddingTop="22dp">

    <ImageView
        android:id="@+id/actionSearchBtn"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:src="@drawable/main_search"/>

    <ImageView
        android:id="@+id/actionUploadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_upload"
        app:layout_constraintEnd_toStartOf="@id/actionNotificationBtn"
        app:layout_constraintTop_toTopOf="@id/actionSearchBtn"
        app:layout_constraintBottom_toBottomOf="@id/actionSearchBtn"
        android:layout_marginEnd="38dp"/>

    <ImageView
        android:id="@+id/actionNotificationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_notification"
        app:layout_constraintEnd_toStartOf="@id/actionProfileBtn"
        app:layout_constraintTop_toTopOf="@id/actionSearchBtn"
        app:layout_constraintBottom_toBottomOf="@id/actionSearchBtn"
        android:layout_marginEnd="37dp"/>

    <View
        android:visibility="invisible"
        android:id="@+id/notiDotView"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:background="@color/color5300ED"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/actionNotificationBtn"
        app:layout_constraintBottom_toTopOf="@id/actionNotificationBtn"/>

    <ImageView
        android:id="@+id/actionProfileBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/actionSearchBtn"
        app:layout_constraintBottom_toBottomOf="@id/actionSearchBtn"
        android:layout_marginEnd="19dp"/>

    <View
        android:visibility="invisible"
        android:id="@+id/profileDotView"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:background="@color/color5300ED"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/actionProfileBtn"
        app:layout_constraintBottom_toTopOf="@id/actionProfileBtn"/>

</android.support.constraint.ConstraintLayout>