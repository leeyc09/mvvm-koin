<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFFFFFF"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="11dp"
    android:paddingBottom="9dp"
    android:id="@+id/mainLayout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <xlab.world.xlab.utils.view.textView.TextViewBoldNoto
            android:id="@+id/textViewHashTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color000000"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:layout_weight="1"/>

        <xlab.world.xlab.utils.view.textView.TextViewBoldHan
            android:id="@+id/textViewHashTagCnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/colorBlack30"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"/>

    </LinearLayout>

</LinearLayout>
