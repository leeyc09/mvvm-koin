<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/mainLayout">

    <xlab.world.xlab.utils.view.textView.TextViewMediumNoto
        android:id="@+id/textViewName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="13sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"/>

    <ImageView
        android:id="@+id/ratingBadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rating_toggle_bad"
        android:layout_marginStart="12dp"/>

    <ImageView
        android:id="@+id/ratingSoSoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rating_toggle_soso"
        android:layout_marginStart="16dp"/>

    <ImageView
        android:id="@+id/ratingGoodBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rating_toggle_good"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="98dp"/>

</LinearLayout>
